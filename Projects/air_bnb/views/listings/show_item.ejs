<% layout("/layout/boilerplate") %>
<body id="listing_page">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">

                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <!-- Image -->
                    <% if(listing.image) { %>
                        <img src="<%= listing.image.url %>" class="card-img-top img-fluid" alt="<%= listing.title %>">
                    <% } else { %>
                        <img src="https://via.placeholder.com/800x400?text=No+Image" class="card-img-top img-fluid" alt="No Image">
                    <% } %>

                    <div class="card-body p-4">
                        <h3 class="card-title mb-4 text-center fw-bold"><%= listing.title %></h3>

                        <ul class="list-group list-group-flush mb-4 rounded-3 overflow-hidden shadow-sm">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Description:</strong> <span><%= listing.description %></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Price:</strong> <span>&#8377; <%= listing.price %></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Location:</strong> <span><%= listing.location %></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Country:</strong> <span><%= listing.country %></span>
                            </li>
                        </ul>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary btn-hover-scale">Edit</a>

                            <form method="POST" action="/listing/<%= listing._id %>/delete?_method=DELETE"
                                onsubmit="return confirm('Are you sure you want to delete this listing?');">
                                <button type="submit" class="btn btn-danger btn-hover-scale">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <style>
        /* Smooth button hover effect */
        .btn-hover-scale {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-hover-scale:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        /* Card title gradient effect */
        #listing_page .card-title {
            background: linear-gradient(90deg, #007bff, #6610f2);
            background-clip: border-box;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* List item hover highlight */
        .list-group-item:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s;
        }
    </style>
</body>
